<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gil.smapa.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <Button
            android:textColor="@color/mwhite"
            android:layout_margin="10dp"
            android:id="@+id/btnRunApp"
            android:background="@color/colorPrimary"
            android:text="Leer archivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <ListView
            android:id="@+id/myListView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="5.06"></ListView>
        <EditText
            android:visibility="gone"
            android:id="@+id/dataClient"
            android:layout_width="match_parent"
            android:layout_height="100dp"
             />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:visibility="gone"
                android:id="@+id/btnSaveMeasure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar" />

            <TextView
                android:id="@+id/helperKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Medidores faltantes: "
                android:textSize="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="0"
                android:id="@+id/totalClients"
                android:textSize="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:textColor="@color/mwhite"
            android:background="@color/mgreen"
            android:layout_margin="10dp"
            android:text="Finalizar recorrido"
            android:id="@+id/finishTravel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
